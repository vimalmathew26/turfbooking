@page
@model TurfBookingApp.Pages.AdminDashboardModel
@{
    Layout = null;
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Dashboard - Turf Booking</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container py-5">
        <div class="card shadow-sm p-4">
            <h2 class="mb-4 text-danger text-center">Admin Dashboard</h2>

            <p class="text-center">
                Welcome, <strong>@User?.Identity?.Name</strong>
            </p>

            <div class="list-group mb-4">
                <a href="/ManageGrounds" class="list-group-item list-group-item-action">
                    ⚽ Manage Grounds
                </a>
                <a href="/ManageSlots" class="list-group-item list-group-item-action">
                    ⏰ Manage Slots
                </a>
                <a href="/ManageBookings" class="list-group-item list-group-item-action">
                    📅 Manage Bookings
                </a>
                <a href="/UserManagement" class="list-group-item list-group-item-action">
                    👥 Manage Users
                </a>
                <a asp-page="/ResetPassword" class="list-group-item list-group-item-action">
                    🔑 Change Password
                </a>
            </div>

            <div class="text-center">
                <a asp-page="/Logout" class="btn btn-danger">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </a>
        </div>
    </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
