@page
@model TurfBookingApp.Pages.RegisterModel
@{
    Layout = null;
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Register - Turf Booking</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light d-flex align-items-center justify-content-center" style="height: 100vh;">

    <div class="card shadow p-4" style="width: 100%; max-width: 500px;">
        <h3 class="mb-4 text-center text-success">Create Account</h3>

        <form method="post">
            <div class="mb-3">
                <label asp-for="NewUser.Username" class="form-label">Username</label>
                <input asp-for="NewUser.Username" class="form-control" />
                <span asp-validation-for="NewUser.Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewUser.Email" class="form-label">Email</label>
                <input asp-for="NewUser.Email" class="form-control" type="email" />
                <span asp-validation-for="NewUser.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewUser.PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="NewUser.PhoneNumber" class="form-control" />
                <span asp-validation-for="NewUser.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewUser.PasswordHash" class="form-label">Password</label>
                <input asp-for="NewUser.PasswordHash" class="form-control" type="password" />
                <span asp-validation-for="NewUser.PasswordHash" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100">Register</button>
        </form>
        <div class="mt-2 text-center">
            <a asp-page="/Login">Already have an account? Login</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>