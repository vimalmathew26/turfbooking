@page
@model TurfBookingApp.Pages.UserDashboardModel
@{
    Layout = null;
    ViewData["Title"] = "User Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>User Dashboard - Turf Booking</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container py-5">
        <div class="card shadow-sm p-4">
            <h2 class="mb-4 text-primary text-center">User Dashboard</h2>

            <p class="text-center">
            <p>Welcome, @User?.Identity?.Name</p>

            <div class="list-group">
                <a href="/BrowseGrounds" class="list-group-item list-group-item-action">
                    📍 Browse Grounds
                </a>
                <a href="/MyBookings" class="list-group-item list-group-item-action">
                    📅 My Bookings
                </a>
                <a href="/MyProfile" class="list-group-item list-group-item-action">
                    👤 Edit Profile
                </a>
            </div>
        </div>
    </div>
    <p>
        <a asp-page="/ResetPassword" class="btn btn-warning">Change Password</a>
    </p>
    <p>
        <a asp-page="/Logout" class="btn btn-warning">Logout</a>
    </p>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
