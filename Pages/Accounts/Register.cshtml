@page
@model turfbooking.Pages.Accounts.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #f4fdf4;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .register-container {
        max-width: 550px;
        margin: 3rem auto;
        background-color: #ffffff;
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(34, 139, 34, 0.2);
        border-top: 5px solid #28a745;
    }

    .form-label {
        font-weight: 600;
        color: #2e7d32;
    }

    .btn-green {
        background-color: #28a745;
        border-color: #28a745;
        color: #fff;
        font-weight: 600;
    }

        .btn-green:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    h2 {
        text-align: center;
        color: #2e7d32;
        margin-bottom: 1.5rem;
    }

    .text-danger {
        font-size: 0.9rem;
    }
</style>

<div class="register-container">
    <h2>Register</h2>

    <form method="post">

        <!-- Username -->
        <div class="mb-3">
            <label asp-for="NewUser.Username" class="form-label">Username</label>
            <input asp-for="NewUser.Username" class="form-control" />
            <span asp-validation-for="NewUser.Username" class="text-danger"></span>
        </div>

        <!-- Email -->
        <div class="mb-3">
            <label asp-for="NewUser.Email" class="form-label">Email</label>
            <input asp-for="NewUser.Email" class="form-control" />
            <span asp-validation-for="NewUser.Email" class="text-danger"></span>
        </div>

        <!-- Phone Number -->
        <div class="mb-3">
            <label asp-for="NewUser.PhoneNumber" class="form-label">Phone Number</label>
            <input asp-for="NewUser.PhoneNumber" class="form-control" />
            <span asp-validation-for="NewUser.PhoneNumber" class="text-danger"></span>
        </div>

        <!-- Password -->
        <div class="mb-3">
            <label asp-for="NewUser.PasswordHash" class="form-label">Password</label>
            <input asp-for="NewUser.PasswordHash" class="form-control" type="password" />
            <span asp-validation-for="NewUser.PasswordHash" class="text-danger"></span>
        </div>

        <!-- Confirm Password -->
        <div class="mb-3">
            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <!-- Security Question -->
        <div class="mb-3">
            <label asp-for="SelectedQuestion" class="form-label">Security Question</label>
            <select asp-for="SelectedQuestion" class="form-control">
                <option value="">-- Select a question --</option>
                @foreach (var question in Model.SecurityQuestions)
                {
                    <option value="@question">@question</option>
                }
            </select>
            <span asp-validation-for="SelectedQuestion" class="text-danger"></span>
        </div>

        <!-- Security Answer -->
        <div class="mb-3">
            <label asp-for="Answer" class="form-label">Answer</label>
            <input asp-for="Answer" class="form-control" />
            <span asp-validation-for="Answer" class="text-danger"></span>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-green">Register</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}