@page
@model SetupSecurityModel

@{
    ViewData["Title"] = "Setup Security Question";
}

<style>
    body {
        background-color: snow;
        color: #f8f9fa;
    }

    .auth-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .auth-card {
        width: 100%;
        max-width: 400px;
        padding: 30px;
        border-radius: 12px;
        background-color: snow;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
    }

    label {
        color: purple;
        font-weight: 500;
    }

    .form-control {
        background-color: transparent;
        border-radius: 0.4rem;
    }

    .btn-custom {
        background-color: #9d4edd;
        border: none;
    }

        .btn-custom:hover {
            background-color: #7b2cbf;
        }

    .alert {
        border-radius: 0.5rem;
    }
</style>

<div class="auth-container">
    <div class="auth-card">
        <h4 class="text-center mb-4">Set Your Security Question</h4>

        <form method="post" novalidate>
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label>
                    <h4 style="color:darkmagenta">Select a question:</h4>
                </label>
                <select asp-for="SelectedQuestion" class="form-control">
                    <option value="">-- Select a question --</option>
                    @foreach (var question in Model.SecurityQuestions)
                    {
                        <option value="@question">@question</option>
                    }
                </select>
                <span asp-validation-for="SelectedQuestion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label>Your Answer:</label>
                <input asp-for="Answer" class="form-control" placeholder="Enter your answer" />
                <span asp-validation-for="Answer" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-custom w-100 text-white">Submit</button>
        </form>
    </div>
</div>