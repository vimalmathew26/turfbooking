<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Turf Booking</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/turfbooking.styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>


    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
    @await RenderSectionAsync("Styles", required: false)
    <style>
        .navbar-darkgreen {
            background-color: #028a0f !important; /* A rich dark green */
        }

            .navbar-darkgreen .navbar-nav .nav-link {
                color: #fff !important;
                transition: color 0.2s;
            }

                .navbar-darkgreen .navbar-nav .nav-link:hover,
                .navbar-darkgreen .navbar-nav .nav-link:focus {
                    color: #e0e0e0 !important;
                }

        .back-arrow {
            text-decoration: none;
            color: black;
            font-size: 1.5rem;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            transition: background-color 0.2s ease;
        }

            .back-arrow:hover {
                background-color: white;
            }
    </style>
</head>
<body>
    <header>
       

        <nav class="navbar navbar-expand-lg navbar-dark navbar-darkgreen mb-4" id="nav">
            <div class="container-fluid">

                @if ((ViewData["ShowBackButton"] == null || (bool)ViewData["ShowBackButton"] == true)
                                && !string.IsNullOrEmpty(Context.Session.GetString("PreviousPage")))
                {
                    <a href="@Context.Session.GetString("PreviousPage")">
                    <i class="fa fa-arrow-circle-left me-3 bg-green text-white" style="font-size:24px"
                       >
                    </i>
                        
                    </a>
                }

                <a class="navbar-brand" href="/">Turf Booking</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="nav-link" asp-page="/Admin/AdminDashboard">Home</a>
                            }
                            else if (User.IsInRole("User"))
                            {
                                <a class="nav-link" asp-page="/Users/UserDashboard">Home</a>
                            }
                        </li>
                        <li class="nav-item ms-3">
                            <a asp-page="/Accounts/Logout" class="nav-link">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>