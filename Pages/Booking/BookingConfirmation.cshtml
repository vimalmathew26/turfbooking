@page
@model turfbooking.Pages.Booking.BookingConfirmationModel
@{
    ViewData["Title"] = "Booking Confirmation";
}

    <div asp-validation-summary="ModelOnly"
         class="validation-summary-errors"
         style="font-size: 1.25rem; padding: 1.5rem; border-radius: 12px; background-color: #ffe0e0; color: #b30000; border-left: 6px solid #ff4d4d; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; list-style: none; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05); max-width: 600px; margin: 2rem auto;">
    </div>


@if (Model.Booking!=null)
{
    <h2>Booking Confirmed!</h2>

<div class="alert alert-success">
    <p><strong>Ground:</strong> @Model.Booking.Ground.GroundName</p>
    <p><strong>Date:</strong> @Model.Booking.BookingDate.ToString("dd-MM-yyyy")</p>
    <p><strong>Time:</strong> @Model.Booking.StartTime - @Model.Booking.EndTime</p>
    <p><strong>Total Price:</strong> ₹@Model.Booking.TotalPrice</p>
</div>

<a class="btn btn-primary" asp-page="/Booking/MyBookings">View My Bookings</a>
}

<style>
    .validation-summary-errors ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .validation-summary-errors li {
        margin-bottom: 8px;
        font-weight: 500;
    }
</style>
