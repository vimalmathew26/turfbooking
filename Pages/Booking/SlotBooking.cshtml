@page
@using turfbooking.Models
@model turfbooking.Pages.Booking.SlotBookingModel

@{
    ViewData["Title"] = "Slot Booking";
}
<div asp-validation-summary="ModelOnly"
     style="font-size: 1.25rem; padding: 1.5rem; border-radius: 12px; background-color: #ffe0e0; color: #b30000; border-left: 6px solid #ff4d4d; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; list-style: none; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);">
   
</div>


@if (Model.AvailableSlots.Any())
{
    <h2>Book a Slot for @Model.Date.ToString("dd-MM-yyyy")</h2>


    <div>
        <strong>Select Date:</strong>
        <div class="btn-group mb-3" role="group">
            @foreach (var day in Model.Next7Days)
            { 
                <a asp-page="./SlotBooking"
                   asp-route-GroundId="@Model.GroundId"
                   asp-route-CourtId="@Model.CourtId"
                   asp-route-Date="@day.ToString("yyyy-MM-dd")"
                   class="btn btn-sm @(Model.Date.Date == day.Date ? "btn-primary" : "btn-outline-primary")">
                    @day.ToString("ddd, MMM dd")
                </a>
            }
        </div>
    </div>


        <div class="slot-grid">
            @foreach (var slot in Model.AvailableSlots)
            {
                var date = slot.BookingDate.Date.ToString("dd-MM-yyyy");
                var slotText = $"{slot.StartTime:hh\\:mm} - {slot.EndTime:hh\\:mm}";
                var isExpired = (Model.Date.Date == DateTime.Now.Date && slot.StartTime <= @Model.CurrentTime) || Model.Date.Date < DateTime.Now.Date;
           
                if (slot.Status == Slot.SlotStatus.Blocked)
                {
                    <div class="slot-card booked">
                        @date<br />
                        @slotText<br />Under Maintanance
                    </div>
                }
                else if (isExpired)
                {
                    <div class="slot-card expired">
                            @date<br />
                            @slotText<br />Expired
                        </div>
                    }
                    else if (slot.Status==Slot.SlotStatus.Booked)
                    {
                        <div class="slot-card booked">
                            @date<br />
                            @slotText<br />Booked
                        </div>
                    }
                    else
                    {
                        <form method="post" asp-page-handler="Book" asp-route-slotId="@slot.Id">
                   
                            <button type="submit" class="slot-card available">
                                @slotText<br />Book
                            </button>
                        </form>
                    }
                }
            </div>
}
<style>
    .slot-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
    }

    .slot-card {
        width: 180px;
        height: 80px;
        border-radius: 8px;
        color: white;
        font-weight: bold;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 5px;
    }

    .expired {
        background-color: #dc3545;
    }

    .booked {
        background-color: lightgreen;
    }

    .available {
        background-color: #28a745;
        cursor: pointer;
    }

        .available:hover {
            opacity: 0.9;
        }

    .validation-summary-errors ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .validation-summary-errors li {
        margin-bottom: 8px;
        font-weight: 500;
    }
</style>