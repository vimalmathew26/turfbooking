@page
@model turfbooking.Pages.Admin.AdminDashboardModel
@{
    Layout = null;
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Dashboard - Turf Booking</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background: url('/images/turf8.JPG') no-repeat center center fixed;
            background-size: cover;
        }

        .dashboard-wrapper {
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 1rem;
            padding: 2rem;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        }

        .dashboard-header h2 {
            font-weight: 700;
            color: #198754;
        }

        .card-option {
            border: none;
            border-radius: 1rem;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease-in-out;
        }

            .card-option:hover {
                transform: translateY(-6px);
            }

        .icon-circle {
            font-size: 2rem;
            width: 3rem;
            height: 3rem;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1rem;
        }

        .icon-green {
            background-color: #e6f4ea;
            color: #198754;
        }

        .btn-modern {
            border-radius: 50px;
        }
    </style>
</head>
<body>

    <div class="container py-5">
        <div class="dashboard-wrapper">
            <div class="dashboard-header text-center mb-5">
                <h2>Admin Dashboard</h2>
                <p class="text-muted">Welcome, <strong>@User?.Identity?.Name</strong></p>
            </div>

            <div class="row g-4">
                <!-- Manage Grounds -->
                <div class="col-md-4">
                    <div class="card card-option text-center h-100 p-4">
                        <div class="icon-circle icon-green mx-auto">
                            <i class="bi bi-building"></i>
                        </div>
                        <h5 class="card-title fw-bold">Manage Grounds</h5>
                        <p class="card-text text-muted">Add, update, and deactivate sports grounds for booking.</p>
                        <a asp-page="/Grounds/Index" class="btn btn-success btn-modern w-75 mt-2">Go</a>
                    </div>
                </div>

                <!-- Manage Slots -->
                <div class="col-md-4">
                    <div class="card card-option text-center h-100 p-4">
                        <div class="icon-circle icon-green mx-auto">
                            <i class="bi bi-clock-history"></i>
                        </div>
                        <h5 class="card-title fw-bold">Manage Slots</h5>
                        <p class="card-text text-muted">Customize available time slots for ground bookings.</p>
                        <a href="/ManageSlots" class="btn btn-success btn-modern w-75 mt-2">Go</a>
                    </div>
                </div>

                <!-- Manage Bookings -->
                <div class="col-md-4">
                    <div class="card card-option text-center h-100 p-4">
                        <div class="icon-circle icon-green mx-auto">
                            <i class="bi bi-calendar-week"></i>
                        </div>
                        <h5 class="card-title fw-bold">Manage Bookings</h5>
                        <p class="card-text text-muted">Review, confirm, or cancel user bookings with ease.</p>
                        <a href="/ManageBookings" class="btn btn-success btn-modern w-75 mt-2">Go</a>
                    </div>
                </div>

                <!-- Manage Users -->
                <div class="col-md-4">
                    <div class="card card-option text-center h-100 p-4">
                        <div class="icon-circle icon-green mx-auto">
                            <i class="bi bi-people"></i>
                        </div>
                        <h5 class="card-title fw-bold">Manage Users</h5>
                        <p class="card-text text-muted">View registered users and manage their access rights.</p>
                        <a href="/Admin/ManageUsers" class="btn btn-success btn-modern w-75 mt-2">Go</a>
                    </div>
                </div>

                <!-- Change Password -->
                <div class="col-md-4">
                    <div class="card card-option text-center h-100 p-4">
                        <div class="icon-circle icon-green mx-auto">
                            <i class="bi bi-key-fill"></i>
                        </div>
                        <h5 class="card-title fw-bold">Manage Profile</h5>
                        <p class="card-text text-muted">Manage your admin password to keep your account secure.</p>
                        <a asp-page="/Admin/AdminProfile" class="btn btn-warning btn-modern w-75 mt-2">Change</a>
                    </div>
                </div>

                <!-- Logout -->
                <div class="col-md-4">
                    <div class="card card-option text-center h-100 p-4">
                        <div class="icon-circle icon-green mx-auto">
                            <i class="bi bi-box-arrow-right"></i>
                        </div>
                        <h5 class="card-title fw-bold">Logout</h5>
                        <p class="card-text text-muted">Sign out from the admin dashboard securely.</p>
                        <a asp-page="/Accounts/Logout" class="btn btn-danger btn-modern w-75 mt-2">Logout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>