@page
@model turfbooking.Pages.Admin.AdminProfileModel
@{
    ViewData["Title"] = "Admin Profile";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    body {
        background: url('/images/turfbg') no-repeat center center fixed;
        background-size: cover;
    }

    .profile-wrapper {
        background-color: rgba(255, 255, 255, 0.95);
        border-radius: 1rem;
        padding: 2rem;
        max-width: 600px;
        margin: 50px auto;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
    }

        .profile-wrapper h2 {
            color: #198754;
            font-weight: 700;
            margin-bottom: 1rem;
        }

    .btn-modern {
        border-radius: 50px;
    }
</style>

<div class="profile-wrapper">
    <h2 class="text-center">Admin Profile</h2>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success text-center">@Model.SuccessMessage</div>
    }

    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Input.Username" class="form-label fw-semibold">Username</label>
            <input asp-for="Input.Username" class="form-control" />
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label fw-semibold">Email</label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Input.PhoneNumber" class="form-label fw-semibold">Phone Number</label>
            <input asp-for="Input.PhoneNumber" class="form-control" />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>

        <div class="d-grid gap-2 d-md-flex justify-content-md-between">
            <button type="submit" class="btn btn-success btn-modern px-4">
                <i class="bi bi-save me-1"></i> Update Profile
            </button>

            <a asp-page="/Accounts/ResetPassword" class="btn btn-outline-warning btn-modern px-4">
                <i class="bi bi-key"></i> Change Password
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}